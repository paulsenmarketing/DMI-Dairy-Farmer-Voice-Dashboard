                    </div>

                    <div class="flex-grow p-6 bg-gray-50">
                        <h4 class="text-xl font-semibold mb-2">
                            <a href="{{ entry.url }}" class="text-gray-800 hover:text-black transition-colors duration-200">
                                {{ entry.title }}
                            </a>
                        </h4>

                        <p class="text-sm text-gray-600 mb-4">
                            {{ entry.postDate|date('F j, Y') }}
                        </p>

                        {{ Button.default({
                            text: 'View Blog Post',
                            link: entry.url
                        }) }}
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>

{% endblock body %}