{% extends 'index.twig' %}

{% import '_templates/elements/button.twig' as Button %}

{% block body %}

    {% set blocks = craft.entries().section('blog').all() %}
    {% set entries = craft.entries().section('blogPosts').all() %}


    {% for block in blocks %}
<div class="py-20 min-h-[75vh]">
    <div class="bg-gray-300 relative flex items-center justify-center mb-12 md:mb-20">
        <div class="md:flex text-white z-10 block-container block-padding">
            <div class="md:w-1/2 md:pr-4">
                <h1 class="text-3xl md:text-5xl text-white">{{ block.title }}</h1>
            </div>
        </div>
    </div>
    {% endfor %}
    <div class="py-20 min-h-[70vh]">
        <div class="block-container grid grid-cols-1 lg:grid-cols-2 gap-8">
            {% for entry in entries %}
                <article class="bg-white rounded-lg overflow-hidden transition-shadow duration-300 flex">
                    <div class="flex-shrink-0 w-24 md:w-36 flex items-center justify-center p-4 bg-gray-100 relative">
