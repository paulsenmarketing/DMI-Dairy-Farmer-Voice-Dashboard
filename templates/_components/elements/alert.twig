{% macro daisy(data) %}
      {% import '_components/elements/button.twig' as Button %}
      {% import '_components/elements/button.twig' as Button %}
      {% if data is null %}
         {{ dump('No data was passed to the Alert element! Placeholder data will be used.') }}
         {% set data = {
            text: 'This is some text',
            richText: 'This is some richtext' ,
            alertType: 'info',
            button: {
            url: 'https://www.google.com',
            text: 'Click me!'
         }}
         %}
      {% endif %}

      <div role="alert" class="alert rounded relative bg-surface-50 border-surface-200 ">

         {% switch data.alertType.value %}
            {% case 'info' %}
               <i data-lucide="info" class="w-6 h-6 stroke-primary-600"></i>
            {% case 'warning' %}
               <i data-lucide="octagon-x" class="w-6 h-6 stroke-orange-600"></i>
            {% case 'caution' %}
               <i data-lucide="triangle-alert" class="w-6 h-6 stroke-red-600"></i>
            {% case 'question' %}
               <i data-lucide="message-circle-question" class="w-6 h-6 stroke-purple-600"></i>
            {% case 'ok' %}
               <i data-lucide="circle-check-big" class="w-6 h-6 stroke-green-600"></i>
            {% default %}

         {% endswitch %}


         <div class="flex flex-col text-primary-900 w-full">
            <span class="font-bold text-xl">{{ data.title }}</span>
            <span>{{ data.richText }}</span>
            {% if data.button[0].buttonLink != '' %}
            <div class="flex ml-auto w-full max-w-44">
               {{ Button.filled(data.button[0]) }}
            </div>
            {% endif %}
         </div>
      </div>
{% endmacro %}