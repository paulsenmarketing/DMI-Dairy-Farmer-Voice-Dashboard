{% macro pines(data) %}
      {% import '_components/elements/button.twig' as Button %}

      {% set alertType = {
         'info': 'bg-blue-500',
         'warning': 'bg-red-500',
         'question': 'bg-purple-500',
         'caution': 'bg-yellow-600',
         'ok': 'bg-green-500',
      } %}

   {% set icon = {
      'info': 'info',
      'warning': 'octagon-x',
      'question': 'message-circle-question',
      'caution': 'triangle-alert',
      'ok': 'circle-check-big',
   } %}

      {% if data is null %}
         {{ dump('No data was passed to the Alert element! Placeholder data will be used.') }}
         {% set data = {
            title: 'Title',
            text: 'This is some placeholder text.',
            richText: 'This is some placeholder richtext.' }
         %}
      {% endif %}

      <div class="relative w-full rounded-lg border-surface-200 {{ alertType[data.alertType.value] }} text-white flex flex-col gap-4 py-6 px-8">
         <div class="flex items-center gap-2">
            <i data-lucide="{{ icon[data.alertType.value] }}" class="w-12 h-12 stroke-white"></i>
            <h5 class="mb-1 font-medium text-3xl leading-none tracking-tight">{{ data.title}}</h5>
         </div>

         <div class="text-md">{{ data.richText }}</div>
         <div class="min-w-1/3 mx-auto">
            {{ Button.filled(data.button[0]) }}
         </div>
      </div>

{% endmacro %}