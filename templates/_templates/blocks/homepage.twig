{% import '_templates/elements/image.twig' as Image  %}

<div class="w-full px-8 bg-brandWhiteBlue py-12 lg:py-20 hp">
    <div class="block-container">
        {# Set up your matrix block #}
        {% set graphBlocks = block.homepageGrid.all() %}

        {# Main container #}
        <div class="space-y-6">

            {# Row 1 & Partial Row 2 #}
            <div class="grid grid-cols-4 gap-8 auto-rows-[200px]">
                {% for block in graphBlocks[0:3] %}
                    <div class="col-span-1 row-span-2 flex flex-col">
                        <h5 class="font-bold h-6 overflow-hidden">{{ block.title }}</h5>
                        <div class="mb-2">{{ block.richText50 }}</div>
                        <div class="flex-grow overflow-hidden shadow-xl">
                            {% set image = block.singleImage.eagerly().one() %}
                            {{ Image.Default(image) }}
                        </div>
                    </div>
                {% endfor %}
                <div class="col-span-1 row-span-4 flex flex-col">
                    <h5 class="font-bold h-6 overflow-hidden">{{ graphBlocks[3].title }}</h5>
                    <div class="mb-2">{{ graphBlocks[3].richText50 }}</div>
                    <div class="flex-grow overflow-hidden shadow-xl">
                        {% set image = graphBlocks[3].singleImage.eagerly().one() %}
                        {{ Image.Default(image) }}
                    </div>
                </div>

                {# Row 2 Content #}
                <div class="col-span-2 row-span-2 flex flex-col">
                    <h5 class="font-bold h-6 overflow-hidden">{{ graphBlocks[4].title }}</h5>
                    <div class="mb-2">{{ graphBlocks[4].richText50 }}</div>
                    <div class="flex-grow overflow-hidden shadow-xl">
                        {% set image = graphBlocks[4].singleImage.eagerly().one() %}
                        {{ Image.Default(image, {class: 'w-full h-full object-cover'}) }}
                    </div>
                </div>
                <div class="col-span-1 row-span-2 flex flex-col">
                    <h5 class="font-bold h-6 overflow-hidden">{{ graphBlocks[5].title }}</h5>
