<div x-data="{ activeTab: 'tab1' }" class="max-w-4xl mx-auto p-6">
    <h2 class="text-2xl font-bold mb-4">{{ block.title }}</h2>

    <div class="flex">
        <div class="w-1/4 pr-4">
            {% for tab in block.tabs %}
                <button
                        @click="activeTab = 'tab{{ loop.index }}'"
                        :class="{ 'bg-blue-500 text-white': activeTab === 'tab{{ loop.index }}', 'bg-gray-200 text-gray-700': activeTab !== 'tab{{ loop.index }}' }"
                        class="w-full py-2 px-4 text-left mb-2 rounded transition duration-150 ease-in-out"
                >
                    {{ tab.label }}
                </button>
            {% endfor %}
        </div>

        <div class="w-3/4">
            {% for tab in block.tabs %}
                <div x-show="activeTab === 'tab{{ loop.index }}'" class="bg-white p-4 rounded shadow">
                    <h3 class="text-xl font-semibold mb-3">{{ tab.title }}</h3>
                    <div class="prose mb-6">
                        {{ tab.content|raw }}
                    </div>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        {% for image in tab.images %}
                            <img src="{{ image.url }}" alt="{{ image.alt }}" class="w-full h-40 object-cover rounded">
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
