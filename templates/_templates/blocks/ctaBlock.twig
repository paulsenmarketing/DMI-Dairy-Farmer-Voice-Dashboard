{% import '_templates/elements/button.twig' as Button %}

<div class="w-full px-5 py-12 lg:py-20">
    <div class="block-container">
        <div class="bg-brandBlue text-white p-8 rounded-lg">
            <div class="md:flex">
                <div class="md:w-2/3 flex flex-col justify-center">
                    <h2 class="mb-6">{{ block.title }}</h2>
                    {{ block.richText }}
                </div>
                <div class="md:w-1/3 flex flex-col md:items-end justify-center max-md:mt-8">
                    {{ Button.default(block.button[0]) }}
                </div>
            </div>
        </div>
    </div>
</div>