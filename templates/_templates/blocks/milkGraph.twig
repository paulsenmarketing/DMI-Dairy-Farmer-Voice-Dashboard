{# Assuming your CSV is stored as an asset #}
{% set csvAsset = craft.assets.filename('DMI-Milk-Graph-historical-prices-03-17-2025.csv').one() %}
{% set csvContent = csvAsset.getContents() %}

{# Parse CSV content #}
{% set rows = csvContent|split('\n') %}
{% set chartData = [] %}

{% for row in rows %}
    {% set values = row|split(',') %}
    {% if values|length == 2 %}
        {% set dataPoint = {
            x: values[0],
            y: values[1]|number_format(2, '.', '')
        } %}
        {% set chartData = chartData|merge([dataPoint]) %}
    {% endif %}
{% endfor %}

<div class="w-full px-5 bg-brandWhiteBlue py-12 lg:py-20">
    <div class="block-container">
        <div class="max-w-full mx-auto text-center">
            <h2 class="pb-6">{{ block.title }}</h2>
            <div class="pb-10">{{ block.richText }}</div>
            <div id="milk-chart"></div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var currentDate = new Date();
        var currentMonth = currentDate.getMonth();
        var currentYear = currentDate.getFullYear();

        var options = {
            chart: {
                type: 'line',
                height: '100%',
                width: '100%',
                fontFamily: 'Inter, sans-serif',
                toolbar: {
                    show: false
                }
            },
            series: [{
                name: 'Price',
                data: {{ chartData|json_encode|raw }}
            }],
            xaxis: {
                title: {
                    text: 'Year',
                    style: {
                        fontSize: '12px',
                        fontWeight: 'bold',
                    }
                },
                type: 'datetime'
            },
            yaxis: {
                title: {
                    text: 'Price',
                    style: {
                        fontSize: '12px',
                        fontWeight: 'bold',
                    }
                },
                labels: {
                    formatter: function(value) {
                        return '$' + value.toFixed(2);
                    }
                }
            },
            stroke: {
                curve: 'smooth',
                width: 3
            },
            colors: ['#374C6A'],
            tooltip: {
                x: {
                    format: 'yyyy-MM-dd'
                }
            },
            annotations: {
                xaxis: [{
                    x: new Date(currentYear, currentMonth, 1).getTime(),
                    borderColor: '#FF4560',
                    label: {
                        borderColor: '#FF4560',
                        style: {
                            color: '#fff',
                            background: '#FF4560'
                        },
                        text: 'Current Month'
                    }
                }]
            },
        };

        var chart = new ApexCharts(document.querySelector("#milk-chart"), options);
        chart.render();
    });
</script>
