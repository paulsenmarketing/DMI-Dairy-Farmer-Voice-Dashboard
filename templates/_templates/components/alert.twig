{% macro Default(data) %}
      {% import '_templates/elements/button.twig' as Button %}

      {% set alertVariant = {
         'info': 'bg-blue-500/25 border-2 border-blue-500 text-blue-500',
         'warning': 'bg-red-500/25 border-2 border-red-500 text-red-500',
         'question': 'bg-purple-500/25 border-2 border-purple-500 text-purple-500',
         'caution': 'bg-yellow-600/25 border-2 border-yellow-600 text-yellow-600',
         'ok': 'bg-green-500/25 border-2 border-green-500 text-green-500',
      } %}

   {% set alertIconColor = {
      'info': 'stroke-blue-500',
      'warning': 'stroke-red-500',
      'question': 'stroke-purple-500',
      'caution': 'stroke-yellow-600',
      'ok': 'stroke-green-500',
   } %}

   {% set icon = {
      'info': 'info',
      'warning': 'octagon-x',
      'question': 'message-circle-question',
      'caution': 'triangle-alert',
      'ok': 'circle-check-big',
   } %}

      {% if data is null %}
         {{ dump('No data was passed to the Alert element! Placeholder data will be used.') }}
         {% set data = {
            title: 'Title',
            text: 'This is some placeholder text.',
            richText: 'This is some placeholder richtext.' }
         %}
      {% endif %}

      <div class="relative w-full rounded-lg border-surface-200 {{ alertVariant[data.alertType.value] }} flex items-end gap-4 py-6 px-8">
         <div class="flex flex-col gap-4">
            <div class="flex items-center gap-2">
               <i data-lucide="{{ icon[data.alertType.value] }}" class="w-8 h-8 {{ alertIconColor[data.alertType.value] }}"></i>
               <h5 class="mb-1 font-medium text-2xl leading-none tracking-tight">{{ data.title}}</h5>
            </div>
            <div class="text-md">{{ data.richText }}</div>
         </div>


            <div>{{ Button.default(data.button[0], ) }}</div>

      </div>

{% endmacro %}